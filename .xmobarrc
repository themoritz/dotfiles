Config { font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Static { xpos = 0 , ypos = 0, width = 1340, height = 20 }
       , commands = [ Run Weather "EDDH" ["-t"," <tempC>Â°C","-L","64","-H","77","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Battery ["-t", "<acstatus>", "--", "-L", "10", "-H", "80", "-p", "3", "-O", " | <fc=green>On</fc>  <left>%", "-i", "", "-o", " | Off <left>%", "-l", "red", "-m", "blue", "-h", "green"] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory%%battery%    <fc=#ee9a00>%date%</fc> | %EDDH% "
       }
